.book-mark-link {
  border-bottom: none;
  display: inline-block;
  position: fixed;
  right: $b2t-position-right;
  top: -10px;
  transition: .3s;

  +tablet-mobile() {
    display: none;
  }
  &::before {
    color: unquote(hexo-config('bookmark.color'));
    // color: $grey;
    // color: #1A2D27;
    // color: #DB9019;
    // color: #5ED5D1;
    // color: #FF6E97;
    // color: #F1AAA6;
    content: '\f02e';
    font-family: $font-family-icons;
    font-size: 32px;
    line-height: 1;
  }
}

.book-mark-link:hover, .book-mark-link-fixed {
  top: -2px;
}
